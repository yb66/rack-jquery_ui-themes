source 'https://rubygems.org'

# Specify your gem's dependencies in rack-jquery.gemspec
gemspec

group :test do
  gem 'rspec'
  gem 'simplecov'
  gem 'rack-test'
  gem "timecop"
end

group :examples do
  gem "sinatra"
  gem "haml"
  gem "rack-jquery"
  gem "rack-jquery_ui", "2.0.0" # for jQuery UI 1.10.1
end

group :development do
  gem "wirble"
  gem "pry"
  gem "yard"
  gem "maruku"
end
